<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HRMApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HRMApp.View"
    xmlns:notification="clr-namespace:HRMApp.Services.Notification"
    x:DataType="notification:NotificationStateService"
    Shell.TabBarTitleColor="Blue"
    Shell.TabBarForegroundColor="Blue"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Trang chủ"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent
            Title="Tác vụ"
            Icon="task.png"
            ContentTemplate="{DataTemplate local:TaskPage}" />

        <ShellContent
            x:Name="NotificationTab" 
            Title="Thông báo"
            Icon="notification.png" 
            ContentTemplate="{DataTemplate local:NotificationPage}"
            Route="NotificationPage" />
        <ShellContent
            Title="Tài khoản"
            Icon="user.png"
            ContentTemplate="{DataTemplate local:ProfilePage}" />

    </TabBar>
</Shell>