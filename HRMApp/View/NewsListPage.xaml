<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRMApp.View.NewsListPage"
             Title="Báº£ng tin"
             BackgroundColor="#F5F6FA">

    <CollectionView x:Name="NewsCollection"
                    ItemsSource="{Binding NewsList}"
                    SelectionMode="Single"
                    Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BackgroundColor="White"
           Padding="10"
           CornerRadius="10"
           Margin="0,5">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnNewsTapped" />
                    </Frame.GestureRecognizers>

                    <HorizontalStackLayout>
                        <Image Source="{Binding Thumbnail}" WidthRequest="40" HeightRequest="40" Aspect="AspectFit"/>
                        <VerticalStackLayout Margin="10,0,0,0">
                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="14"/>
                            <Label Text="{Binding TimeAgo}" FontSize="12" TextColor="#777"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Frame>
            </DataTemplate>

        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
