<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRMApp.View.NotificationDetailPage"
             xmlns:viewmodel="clr-namespace:HRMApp.ViewModels"
             x:DataType="viewmodel:NotificationDetailViewModel"
             Title="Chi tiết thông báo"
             BackgroundColor="#F5F6FA">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label 
                Text="{Binding Notification.Title}"
                FontSize="22"
                FontAttributes="Bold"
                SemanticProperties.HeadingLevel="Level1"/>

            <Label 
                Text="{Binding Notification.CreatedAt, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                FontSize="14"
                TextColor="Gray"/>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,5" />

            <Label 
                Text="{Binding Notification.Content}"
                FontSize="16"
                LineHeight="1.5"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>