<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRMApp.View.NewsDetailPage"
             Title="Chi tiết tin tức"
             BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="8">
            <Image x:Name="ThumbnailImage" HeightRequest="180" Aspect="AspectFill" />
            <Label x:Name="TitleLabel" FontSize="18" FontAttributes="Bold" LineBreakMode="WordWrap"/>
            <Label x:Name="ContentLabel" FontSize="14" TextColor="#444" LineBreakMode="WordWrap"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
