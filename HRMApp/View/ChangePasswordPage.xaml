<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRMApp.View.ChangePasswordPage"
             Title="Đổi mật khẩu"
             BackgroundColor="#F9FAFB">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="22" VerticalOptions="CenterAndExpand">

            <!-- Icon ổ khóa -->
            <Frame Padding="0"
       WidthRequest="200"
       HeightRequest="200"
       CornerRadius="100"
       IsClippedToBounds="True"
       HasShadow="False"
       BorderColor="Transparent"
       HorizontalOptions="Center"
       BackgroundColor="Transparent">

                <Image Source="changepass.png"
           Aspect="AspectFill"
           WidthRequest="200"
           HeightRequest="200"/>
            </Frame>


            <Label Text="Change Password" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <Label Text="Please enter your current and new password below."
                   FontSize="14"
                   TextColor="#777"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,-8,0,10"/>

            <!-- Old Password -->
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Entry x:Name="OldPasswordEntry"
           Placeholder="Old Password"
           IsPassword="True"
           BackgroundColor="White"
           TextColor="Black"
           FontSize="14"
           HeightRequest="50"
           Margin="0"
           Grid.Column="0"
           VerticalOptions="Center"/>

                <ImageButton Source="visibility_off.png"
                 HeightRequest="26"
                 WidthRequest="26"
                 BackgroundColor="Transparent"
                 Grid.Column="1"
                 VerticalOptions="Center"
                 Padding="10"
                 Clicked="ToggleOldPassword"/>
            </Grid>

            <!-- New Password -->
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Entry x:Name="NewPasswordEntry"
           Placeholder="New Password"
           IsPassword="True"
           BackgroundColor="White"
           TextColor="Black"
           FontSize="14"
           HeightRequest="50"
           Grid.Column="0"
           VerticalOptions="Center"/>

                <ImageButton Source="lock.png"
                 HeightRequest="26"
                 WidthRequest="26"
                 BackgroundColor="Transparent"
                 Grid.Column="1"
                 VerticalOptions="Center"
                 Padding="10"/>
            </Grid>

            <!-- Confirm Password -->
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Entry x:Name="ConfirmPasswordEntry"
           Placeholder="Confirm Password"
           IsPassword="True"
           BackgroundColor="White"
           TextColor="Black"
           FontSize="14"
           HeightRequest="50"
           Grid.Column="0"
           VerticalOptions="Center"/>
            </Grid>


            <!-- Confirm Button -->
            <Button Text="CONFIRM CHANGE"
                    BackgroundColor="#F9A825"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="45"
                    Clicked="OnConfirmChangeClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
